<% include ./common/header %>
<% include ./common/nav %>
<div class="main subPage">
    <div class="main-box">
        <div class="main-lf lf">
            <h3 class="main-lf-title"><%= type.name%></h3>
            <div class="main-lf-list">
            <% function isInItem(item){
                     if(item._id.toString()===active._id.toString()){
                         if(item.children && !!item.children.length){
                             item.children[0].style=true;
                         }
                        return true;
                     }else{
                        for(var i = 0;i<item.children.length;i++){
                            if(active._id.toString()===item.children[i]._id.toString()){
                                return true;
                                break;
                            }
                        }
                     }
                     return false;
               }
            %>



            <% typeList.forEach(function(item){ %>
                <a class="main-lf-item <% if(isInItem(item)){ %>active<% } %>" <%if(!item.children || !item.children.length){%>href="/jkcj/<%=item._id%><%if(item.type){ %>?type=<%= item.type%><%if(item.type=='page'){%>&path=<%= item.page%><%}}}%>">
                    <%= item.name%>
                </a>
                <%if(item.children && !!item.children.length){%>
                    <div class="main-lf-sub-List">
                        <% function isSubItem(item){
                            if(item._id.toString()===active._id.toString()){
                                return true;
                            }else if(item.style){
                                return true;
                            }
                        }
                        %>
                        <% item.children.forEach(function(item){%>
                            <a class="main-lf-sub-item <% if(isSubItem(item)){ %>sub-active<% } %>" href="<%if(item.type=='link'){%><%= item.link%><%}else{%>/jkcj/<%= item._doc._id%><% if(item._doc._id =='58e45595ae3484063bc2b6b5'){ %>?type=nav<%}else if(item.type=='article'){%>?type=article<%}else if(item.type=='page'){%>?type=page&path=<%= item.page%><%}}%>">
                                <%= item.name%>
                            </a>
                        <%})%>
                    </div>
                <%}%>
            <% }) %>
            </div>
        </div>
        <!--end:main-lf 内容左边-->
        <div class="main-rt lf">
            <div class="path">您现在的位置：首页》<%= type.name%>》<%= active.name%></div>
            <h3 class="main-rt-title">
                <p class="title-text"><%= active.name%></p>
            </h3>
            <div class="table-content">
                <%- include('./common/content') %>
            </div>
        </div>
    </div>
</div>
<!--end:main 主要内容-->
<% include ./common/footer %>